A = ['A','G','T','A']
B = ['A','T','A']

M = np.zeros((len(A)+1,len(B)+1))
ptr = np.zeros((len(A)+1,len(B)+1))

match = 1
mismatch = -1
indel = -1

for i in range(len(A)+1):
    M[i][0] = i * mismatch
for i in range(len(B)+1):
    M[0][i] = i * mismatch

for i in range(len(A)+1):
    for j in range(len(B)+1):
        if A[i] == B[j]:
            score = match
        else:
            score = mismatch
        c1 = M[i-1,j-1] + score
        c2 = M[i-1,j] + gap
        c3 = M[i,j-1] + gap
        c = np.max(c1,c2,c3)
        M[i,j] = c
        if c == c1:
            ptr[i,j] = 0
        elif c == c2:
            ptr[i,j] = 1
        elif c == c3:
            ptr[i,j] = -1

